{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",

    /* Modules */
    "module": "CommonJS",

    /* Emit */
    "noEmit": true,

    /* Interop Constraints */
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "strictNullChecks": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
